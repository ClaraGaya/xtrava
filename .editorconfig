# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]

charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 380

[*.md]
trim_trailing_whitespace = false


[{package}.json]
indent_style = space
indent_size = 2

[{.browserslistrc,.babelrc,.eslintrc.json,.stylelintrc.json,.prettierrc}]
indent_style = space
indent_size = 2